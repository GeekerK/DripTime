<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_event_height"
    android:background="@android:color/white"
    android:orientation="horizontal">
    <View
        android:id="@+id/event_priority"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/priority_first" />

    <CheckBox
        android:id="@+id/isDone_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/checkbox"
        android:button="@null"
        android:visibility="invisible"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"/>

    <TextView
        android:id="@+id/event_title_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="Add a task with multiple attributes"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:id="@+id/time_tv"
        android:text="6月9日"
        android:textColor="#89000000"
        android:textSize="11sp"
        android:gravity="center"/>
</LinearLayout>